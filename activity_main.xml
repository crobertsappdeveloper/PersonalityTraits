<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.personalitytraits.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollHorizontally="false"
    >
    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >

        <TextView
            android:textColor="#000000"
            style="@style/HeaderTextStyle"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="SELECT THE APPLICABLE BELOW:" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/passionate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="Passionate"
            android:textAppearance="?android:textAppearanceMedium" />

        <CheckBox
            android:id="@+id/outgoing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="24dp"
            android:text="Outgoing"
            android:textAppearance="?android:textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/imaginative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="24dp"
            android:paddingRight="21dp"
            android:text="Imaginative"
            android:textAppearance="?android:textAppearanceMedium" />

        <CheckBox
            android:id="@+id/reserved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="24dp"
            android:text="Reserved"
            android:textAppearance="?android:textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/jovial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="24dp"
            android:paddingRight="62dp"
            android:text="Jovial"
            android:textAppearance="?android:textAppearanceMedium" />

        <CheckBox
            android:id="@+id/serious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="24dp"
            android:text="Serious"
            android:textAppearance="?android:textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/energetic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="24dp"
            android:paddingRight="38dp"
            android:text="Energetic"
            android:textAppearance="?android:textAppearanceMedium" />

        <CheckBox
            android:id="@+id/relaxed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="24dp"
            android:text="Relaxed"
            android:textAppearance="?android:textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/daring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="24dp"
            android:paddingRight="59dp"
            android:text="Daring"
            android:textAppearance="?android:textAppearanceMedium" />

        <CheckBox
            android:id="@+id/anxious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="24dp"
            android:text="Anxious"
            android:textAppearance="?android:textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:text="RESULTS"
            android:onClick="getResults"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:textSize="16sp"
            android:text="RESET"
            android:onClick="ResetValues"/>

            </LinearLayout>

        <TextView
            android:id="@+id/result_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:paddingTop="16dp"
            android:textSize="16sp"
            android:text="PLEASE SEE YOUR RESULTS HERE:" />

    </LinearLayout>
</ScrollView>
